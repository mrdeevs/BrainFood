<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/story_item_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/story_item_title"
        style="@style/story_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/storyItemBg"
        android:ellipsize="end"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:maxLines="2"
        android:paddingStart="@dimen/story_item_padding_start_end"
        android:paddingTop="26dp"
        android:paddingEnd="@dimen/story_item_padding_start_end"
        android:paddingBottom="26dp"
        android:text="Berkshire Hathaway's Annual meeting"
        android:textColor="#666666"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/authorTimeParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/storyItemBg"
        android:weightSum="1.0">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="end"
            android:fontFamily="sans-serif-condensed-light"
            android:textStyle="italic"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="by sjhsharon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:textStyle="italic"
            android:fontFamily="sans-serif-condensed-light"
            android:text="6 hours ago" />
    </LinearLayout>

    <ImageView
        android:id="@+id/story_item_image"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@android:color/white"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/story_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.75"
        android:background="@color/storyItemBg"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:paddingStart="@dimen/story_item_padding_start_end"
        android:paddingTop="14dp"
        android:paddingEnd="@dimen/story_item_padding_start_end"
        android:paddingBottom="32dp"
        android:text="Warren Buffet shares his thoughts on the history of the U.S. economy during Berkshire Hathaway's 2020 annual shareholder meeting." />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#22000000" />

</androidx.appcompat.widget.LinearLayoutCompat>